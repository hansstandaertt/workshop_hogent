<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>SupplierNeedsWebsite</fullName>
    <active>true</active>
    <errorConditionFormula>AND(ISPICKVAL(Type , &apos;Supplier&apos;), isBlank(Website))</errorConditionFormula>
    <errorDisplayField>Website</errorDisplayField>
    <errorMessage>For a Supplier account, we need a website.</errorMessage>
</ValidationRule>
